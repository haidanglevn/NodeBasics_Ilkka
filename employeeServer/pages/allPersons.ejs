<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employees</title>
</head>
<body>
    <main>
        <h2>All Employees</h2>
        <table>
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Department</th>
                    <th>Salay</th>
                </tr>
            </thead>
            <tbody>
                <% result.forEach(person => { %>
                    <tr>
                        <td>
                            <%= person.id %>
                        </td>
                        <td>
                            <%= person.firstname %>
                        </td>
                        <td>
                            <%= person.lastname %>
                        </td>
                        <td>
                            <%= person.department %>
                        </td>
                        <td>
                            <%= person.salary %>
                        </td>
                        
    
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/"><button>Menu</button></a>
    </main>
</body>
</html>